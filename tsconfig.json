{
  "outDir": "./build",
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["sample/", "build/", "data/", "dist/", "public/", "tenants/build/", "cli/draft/"],
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  }
}
